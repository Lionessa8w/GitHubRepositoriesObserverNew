<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout_star_fork_watcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/star_image"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:paddingRight="4dp"
                android:src="@drawable/star_yellow"
                >

            </ImageView>

            <TextView
                android:id="@+id/stars_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:text="@string/stars_number"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="@string/star"
                android:textColor="@color/white"
                android:textSize="20sp">

            </TextView>

            <ImageView
                android:id="@+id/fork_image"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:paddingRight="4dp"
                android:src="@drawable/fork">

            </ImageView>

            <TextView
                android:id="@+id/forks_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:text="@string/forks_number"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="@string/forks"
                android:textColor="@color/white"
                android:textSize="20sp">

            </TextView>

            <ImageView
                android:id="@+id/watchers_image"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:paddingRight="4dp"
                android:src="@drawable/watchers">

            </ImageView>

            <TextView
                android:id="@+id/watchers_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingRight="4dp"
                android:text="@string/watchers_number"
                android:textColor="#21F3E1"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/watchers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:text="@string/watchers"
                android:textColor="@color/white"
                android:textSize="20sp"
                >

            </TextView>


        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>